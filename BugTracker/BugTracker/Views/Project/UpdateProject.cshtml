@{
}
@model BugTracker.Models.Project
<h2>Update Project</h2>
<a asp-route-projId="@Model.Id"></a>


@if(@Model != null) 
{
<form method="post" asp-action="UpdateProject" asp-route-projId="@Model.Id">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit">Submit Changes</button>
</form>
}

<div>
    <a asp-controller="Project" asp-action="ListProjectsPM">Back To Project Manager's Project List</a>
    <a asp-controller="Project" asp-action="AllProjects">Back to All Projects</a>
</div>