@{
}

<h1>Assign a Developer to a Project</h1>

<form method="post" asp-action="AssignDeveloperToProject">
    <select asp-items="@ViewBag.DeveloperList" name="devId"></select>
    <select asp-items="@ViewBag.ProjectList" name="projId"></select>
   <input type="submit" value="Assign" class="btn btn-primary" style="margin: 2rem 0rem 2rem 0rem;"/>
</form>

<br />
<div style="margin: 2rem 0rem 2rem 0rem;">
    @ViewBag.DeveloperMsg
</div>
<div style="margin: 2rem 0rem 2rem 0rem;">
    @ViewBag.ProjectMsg
</div>
<p style="margin: 2rem 0rem 2rem 0rem;">@ViewBag.Message</p>